{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "Node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "out",
        "rootDir": "."
    },
    "include": [
        "index.ts",
        "utils/**/*.ts",
        "api/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
}
