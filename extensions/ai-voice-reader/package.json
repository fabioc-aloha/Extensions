{
  "name": "ai-voice-reader",
  "displayName": "AI Voice Reader",
  "description": "Text-to-speech for VS Code â€” read documents, comments, and notes aloud using OS TTS or Azure Cognitive Speech",
  "version": "0.1.0",
  "publisher": "fabioc-aloha",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tts",
    "text-to-speech",
    "voice",
    "accessibility",
    "read-aloud"
  ],
  "activationEvents": [
    "onCommand:voiceReader.readSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceReader.readSelection",
        "title": "Voice Reader: Read Selection"
      },
      {
        "command": "voiceReader.readDocument",
        "title": "Voice Reader: Read Entire Document"
      },
      {
        "command": "voiceReader.readFile",
        "title": "Voice Reader: Read File..."
      },
      {
        "command": "voiceReader.stop",
        "title": "Voice Reader: Stop"
      },
      {
        "command": "voiceReader.setVoice",
        "title": "Voice Reader: Set Voice"
      }
    ],
    "configuration": {
      "title": "AI Voice Reader",
      "properties": {
        "voiceReader.engine": {
          "type": "string",
          "enum": [
            "os",
            "azure"
          ],
          "default": "os",
          "description": "TTS engine: OS built-in or Azure Cognitive Speech"
        },
        "voiceReader.rate": {
          "type": "number",
          "default": 1.0,
          "minimum": 0.5,
          "maximum": 2.0,
          "description": "Speech rate multiplier"
        },
        "voiceReader.stripMarkdown": {
          "type": "boolean",
          "default": true,
          "description": "Remove Markdown syntax before reading"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
    "package": "npm run bundle && npx @vscode/vsce package",
    "publish": "npm run bundle && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
