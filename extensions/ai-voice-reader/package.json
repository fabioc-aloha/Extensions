{
  "name": "ai-voice-reader",
  "displayName": "AI Voice Reader",
  "description": "Text-to-speech for VS Code â€” read documents, selections, and notes aloud using your OS built-in TTS engine (no API key required)",
  "version": "0.1.3",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "tts",
    "text-to-speech",
    "voice",
    "accessibility",
    "read-aloud"
  ],
  "activationEvents": [
    "onCommand:voiceReader.readSelection",
    "onCommand:voiceReader.readDocument",
    "onCommand:voiceReader.readFile",
    "onCommand:voiceReader.stop",
    "onCommand:voiceReader.setVoice"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voiceReader.readSelection",
        "title": "Voice Reader: Read Selection"
      },
      {
        "command": "voiceReader.readDocument",
        "title": "Voice Reader: Read Entire Document"
      },
      {
        "command": "voiceReader.readFile",
        "title": "Voice Reader: Read File..."
      },
      {
        "command": "voiceReader.stop",
        "title": "Voice Reader: Stop"
      },
      {
        "command": "voiceReader.setVoice",
        "title": "Voice Reader: Set Voice"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "explorer/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "cx.tools": [
        {
          "command": "voiceReader.readSelection",
          "when": "editorFocus",
          "group": "navigation@1"
        },
        {
          "command": "voiceReader.stop",
          "when": "editorFocus",
          "group": "navigation@2"
        },
        {
          "command": "voiceReader.readFile",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "AI Voice Reader",
      "properties": {
        "voiceReader.engine": {
          "type": "string",
          "enum": [
            "os",
            "azure"
          ],
          "default": "os",
          "description": "TTS engine: OS built-in or Azure Cognitive Speech"
        },
        "voiceReader.rate": {
          "type": "number",
          "default": 1,
          "minimum": 0.5,
          "maximum": 2,
          "description": "Speech rate multiplier"
        },
        "voiceReader.stripMarkdown": {
          "type": "boolean",
          "default": true,
          "description": "Remove Markdown syntax before reading"
        }
      }
    },
    "submenus": [
      {
        "id": "cx.tools",
        "label": "$(tools) CX Tools",
        "icon": "$(tools)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
    "package": "npm run bundle && npx @vscode/vsce package",
    "publish": "npm run bundle && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
