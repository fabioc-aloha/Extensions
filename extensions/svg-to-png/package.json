{
  "name": "svg-to-png",
  "displayName": "CX SVG to PNG",
  "description": "Convert SVG to PNG with a right-click â€” Rust renderer (resvg), custom width, transparency, batch convert, and banner pipeline",
  "version": "0.1.1",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "svg",
    "png",
    "convert",
    "image",
    "resvg",
    "vector",
    "rasterize",
    "svg converter",
    "image conversion",
    "batch convert",
    "rust renderer"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onCommand:svgToPng.convert",
    "onCommand:svgToPng.convertBatch",
    "onCommand:svgToPng.generateBanners",
    "onCommand:svgToPng.convertTransparent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svgToPng.convert",
        "title": "SVG to PNG: Convert SVG File"
      },
      {
        "command": "svgToPng.convertBatch",
        "title": "SVG to PNG: Convert All SVGs in Workspace"
      },
      {
        "command": "svgToPng.convertWithWidth",
        "title": "SVG to PNG: Convert at Custom Width"
      },
      {
        "command": "svgToPng.generateBanners",
        "title": "SVG to PNG: Generate All Extension Banners (1280px)"
      },
      {
        "command": "svgToPng.convertTransparent",
        "title": "SVG to PNG: Convert with Transparent Background"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "explorer/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "cx.tools": [
        {
          "command": "svgToPng.convert",
          "when": "resourceExtname == .svg",
          "group": "1_modification@1"
        },
        {
          "command": "svgToPng.convertWithWidth",
          "when": "resourceExtname == .svg",
          "group": "1_modification@2"
        },
        {
          "command": "svgToPng.convertTransparent",
          "when": "resourceExtname == .svg",
          "group": "1_modification@3"
        },
        {
          "command": "svgToPng.convertBatch",
          "when": "resourceExtname == .svg",
          "group": "1_modification@4"
        },
        {
          "command": "svgToPng.generateBanners",
          "group": "1_modification@5"
        }
      ]
    },
    "configuration": {
      "title": "SVG to PNG",
      "properties": {
        "svgToPng.defaultWidth": {
          "type": "number",
          "default": 0,
          "description": "Default output width in pixels (0 = use SVG's natural size)"
        },
        "svgToPng.loadSystemFonts": {
          "type": "boolean",
          "default": true,
          "description": "Load system fonts for accurate text rendering"
        },
        "svgToPng.openAfterConvert": {
          "type": "boolean",
          "default": true,
          "description": "Open the generated PNG after conversion"
        }
      }
    },
    "submenus": [
      {
        "id": "cx.tools",
        "label": "ðŸ”· CX Tools"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
