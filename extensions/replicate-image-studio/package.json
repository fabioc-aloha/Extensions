{
  "name": "replicate-image-studio",
  "displayName": "CX Replicate Image Studio",
  "description": "Generate images inside VS Code using Replicate AI models â€” Flux, SDXL, WAN video generation",
  "version": "0.1.1",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "AI"
  ],
  "keywords": [
    "ai",
    "image-generation",
    "replicate",
    "flux",
    "sdxl",
    "generative-ai"
  ],
  "activationEvents": [
    "onCommand:replicateStudio.generate",
    "onCommand:replicateStudio.generateVideo",
    "onCommand:replicateStudio.setApiKey",
    "onCommand:replicateStudio.viewHistory",
    "onCommand:replicateStudio.insertMarkdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "replicateStudio.generate",
        "title": "Replicate: Generate Image (Choose Model)"
      },
      {
        "command": "replicateStudio.generateSmart",
        "title": "Replicate: Smart Generate (Auto-select Model)"
      },
      {
        "command": "replicateStudio.generateBanner",
        "title": "Replicate: Generate README Banner"
      },
      {
        "command": "replicateStudio.generateVideo",
        "title": "Replicate: Generate Video (WAN 2.1)"
      },
      {
        "command": "replicateStudio.setApiKey",
        "title": "Replicate: Set API Key"
      },
      {
        "command": "replicateStudio.viewHistory",
        "title": "Replicate: View Generation History"
      },
      {
        "command": "replicateStudio.insertMarkdown",
        "title": "Replicate: Insert Last Image as Markdown"
      },
      {
        "command": "replicateStudio.saveToFile",
        "title": "Replicate: Save Last Image to File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "cx.tools": [
        {
          "command": "replicateStudio.generateSmart",
          "when": "editorFocus",
          "group": "navigation@1"
        },
        {
          "command": "replicateStudio.generate",
          "when": "editorFocus",
          "group": "navigation@2"
        },
        {
          "command": "replicateStudio.generateBanner",
          "when": "resourceExtname == .md",
          "group": "navigation@3"
        },
        {
          "command": "replicateStudio.generateVideo",
          "when": "editorFocus",
          "group": "navigation@4"
        },
        {
          "command": "replicateStudio.insertMarkdown",
          "when": "resourceExtname == .md",
          "group": "navigation@5"
        },
        {
          "command": "replicateStudio.saveToFile",
          "when": "editorFocus",
          "group": "navigation@6"
        },
        {
          "command": "replicateStudio.viewHistory",
          "when": "editorFocus",
          "group": "7_modification@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "cx.tools",
        "label": "ðŸ”· CX Tools"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package"
  },
  "dependencies": {
    "@alex-extensions/shared": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
