{
  "name": "cx-markdown-to-word",
  "displayName": "CX Markdown to Word",
  "description": "Convert Markdown files with Mermaid diagrams to professional Word (.docx) documents via Pandoc",
  "version": "0.1.0",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "word",
    "docx",
    "pandoc",
    "mermaid",
    "convert"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownToWord.convert",
        "title": "Markdown to Word: Convert Current File"
      },
      {
        "command": "markdownToWord.convertWithOptions",
        "title": "Markdown to Word: Convert With Options"
      },
      {
        "command": "markdownToWord.preview",
        "title": "Markdown to Word: Preview Diagrams"
      },
      {
        "command": "markdownToWord.checkPandoc",
        "title": "Markdown to Word: Check Pandoc Installation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdownToWord.convert",
          "when": "resourceExtname == .md",
          "group": "navigation@1"
        },
        {
          "command": "markdownToWord.convertWithOptions",
          "when": "resourceExtname == .md",
          "group": "navigation@2"
        },
        {
          "command": "markdownToWord.preview",
          "when": "resourceExtname == .md",
          "group": "navigation@3"
        },
        {
          "command": "markdownToWord.checkPandoc",
          "group": "7_modification@1"
        }
      ],
      "explorer/context": [
        {
          "command": "markdownToWord.convert",
          "when": "resourceExtname == .md",
          "group": "navigation@1"
        },
        {
          "command": "markdownToWord.convertWithOptions",
          "when": "resourceExtname == .md",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Markdown to Word",
      "properties": {
        "markdownToWord.pandocPath": {
          "type": "string",
          "default": "pandoc",
          "description": "Path to pandoc executable"
        },
        "markdownToWord.referenceDoc": {
          "type": "string",
          "default": "",
          "description": "Path to reference .docx for styling"
        },
        "markdownToWord.renderMermaid": {
          "type": "boolean",
          "default": true,
          "description": "Render Mermaid diagrams as images"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
    "package": "npm run bundle && npx @vscode/vsce package",
    "publish": "npm run bundle && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
