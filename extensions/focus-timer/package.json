{
  "name": "cx-focus-timer",
  "displayName": "CX Focus Timer",
  "description": "Pomodoro timer with keyboard shortcuts, session badge, and break history â€” stay in flow without leaving VS Code",
  "version": "0.1.2",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pomodoro",
    "timer",
    "focus",
    "productivity",
    "breaks",
    "time management",
    "work session",
    "pomodoro technique",
    "status bar"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusTimer.start",
        "title": "Focus Timer: Start Focus Session"
      },
      {
        "command": "focusTimer.stop",
        "title": "Focus Timer: Stop"
      },
      {
        "command": "focusTimer.pause",
        "title": "Focus Timer: Pause / Resume"
      },
      {
        "command": "focusTimer.startBreak",
        "title": "Focus Timer: Start Break"
      },
      {
        "command": "focusTimer.showHistory",
        "title": "Focus Timer: Show Session History"
      },
      {
        "command": "focusTimer.resetSessions",
        "title": "Focus Timer: Reset Session Count"
      }
    ],
    "keybindings": [
      {
        "command": "focusTimer.start",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "!focusTimer.running"
      },
      {
        "command": "focusTimer.pause",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "focusTimer.running"
      }
    ],
    "configuration": {
      "title": "Focus Timer",
      "properties": {
        "focusTimer.workMinutes": {
          "type": "number",
          "default": 25,
          "description": "Work session length in minutes"
        },
        "focusTimer.shortBreakMinutes": {
          "type": "number",
          "default": 5,
          "description": "Short break length in minutes"
        },
        "focusTimer.longBreakMinutes": {
          "type": "number",
          "default": 15,
          "description": "Long break after 4 sessions"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
    "package": "npm run bundle && npx @vscode/vsce package",
    "publish": "npm run bundle && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
