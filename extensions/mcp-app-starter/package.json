{
  "name": "mcp-app-starter",
  "displayName": "CX MCP App Starter",
  "description": "Scaffold Model Context Protocol (MCP) servers for Copilot agents â€” zero boilerplate, TypeScript-first, ready to publish",
  "version": "0.1.9",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "mcp",
    "model context protocol",
    "scaffold",
    "copilot",
    "ai"
  ],
  "activationEvents": [
    "onCommand:mcpAppStarter.create",
    "onCommand:mcpAppStarter.addTool",
    "onCommand:mcpAppStarter.addResource",
    "onCommand:mcpAppStarter.validate",
    "onCommand:mcpAppStarter.openDocs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpAppStarter.create",
        "title": "MCP App Starter: New MCP Server"
      },
      {
        "command": "mcpAppStarter.addTool",
        "title": "MCP App Starter: Add Tool to MCP Server"
      },
      {
        "command": "mcpAppStarter.addResource",
        "title": "MCP App Starter: Add Resource to MCP Server"
      },
      {
        "command": "mcpAppStarter.validate",
        "title": "MCP App Starter: Validate MCP Server Config"
      },
      {
        "command": "mcpAppStarter.openDocs",
        "title": "MCP App Starter: Open MCP Documentation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "explorer/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "cx.tools": [
        {
          "command": "mcpAppStarter.addTool",
          "when": "resourceExtname == .ts || resourceExtname == .js || resourceExtname == .py",
          "group": "navigation@1"
        },
        {
          "command": "mcpAppStarter.addResource",
          "when": "resourceExtname == .ts || resourceExtname == .js || resourceExtname == .py",
          "group": "navigation@2"
        },
        {
          "command": "mcpAppStarter.validate",
          "when": "resourceExtname == .json",
          "group": "navigation@3"
        },
        {
          "command": "mcpAppStarter.create",
          "when": "explorerResourceIsFolder",
          "group": "navigation@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "cx.tools",
        "label": "ðŸ”· CX Tools"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./ --noEmit",
    "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
    "watch": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --watch",
    "package": "npm run bundle && npx @vscode/vsce package",
    "publish": "npm run bundle && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
