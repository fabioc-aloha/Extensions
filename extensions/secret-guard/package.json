{
    "name": "cx-secret-guard",
    "displayName": "CX SecretGuard",
    "description": "Pre-commit secret scanner â€” catch leaked API keys, tokens, and credentials before they leave your machine",
    "version": "0.1.1",
    "publisher": "fabioc-aloha",
    "author": "Fabio Correa",
    "icon": "assets/icon.png",
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "security",
        "secrets",
        "api-keys",
        "pre-commit",
        "scanner"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "secretGuard.scanWorkspace",
                "title": "SecretGuard: Scan Workspace"
            },
            {
                "command": "secretGuard.scanFile",
                "title": "SecretGuard: Scan Current File"
            },
            {
                "command": "secretGuard.viewReport",
                "title": "SecretGuard: View Audit Report"
            },
            {
                "command": "secretGuard.addIgnorePattern",
                "title": "SecretGuard: Add Ignore Pattern"
            }
        ],
        "configuration": {
            "title": "SecretGuard",
            "properties": {
                "secretGuard.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable SecretGuard scanning"
                },
                "secretGuard.scanOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Scan files on save"
                },
                "secretGuard.ignorePatterns": {
                    "type": "array",
                    "default": [],
                    "description": "Glob patterns to ignore"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node20 --format=cjs --minify",
        "package": "npm run bundle && npx @vscode/vsce package",
        "publish": "npm run bundle && npx @vscode/vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.109.0",
        "@types/node": "^20.0.0",
        "typescript": "^5.7.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/fabioc-aloha/Extensions"
    },
    "galleryBanner": {
        "color": "#1a1a2e",
        "theme": "dark"
    }
}
