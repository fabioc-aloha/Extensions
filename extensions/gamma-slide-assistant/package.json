{
  "name": "gamma-slide-assistant",
  "displayName": "Gamma Slide Assistant",
  "description": "Convert Markdown to beautiful presentations â€” Marp offline rendering with Gamma-inspired themes, or export to HTML/PDF",
  "version": "0.1.0",
  "publisher": "fabioc-aloha",
  "author": "Fabio Correa",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "presentation",
    "slides",
    "marp",
    "markdown",
    "gamma"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gammaSlides.convertToHtml",
        "title": "Gamma Slides: Export as HTML"
      },
      {
        "command": "gammaSlides.convertToPdf",
        "title": "Gamma Slides: Export as PDF"
      },
      {
        "command": "gammaSlides.preview",
        "title": "Gamma Slides: Preview in Browser"
      },
      {
        "command": "gammaSlides.insertFrontmatter",
        "title": "Gamma Slides: Insert Marp Frontmatter"
      },
      {
        "command": "gammaSlides.newPresentation",
        "title": "Gamma Slides: New Presentation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "explorer/context": [
        {
          "submenu": "cx.tools",
          "group": "navigation@99"
        }
      ],
      "cx.tools": [
        {
          "command": "gammaSlides.convertToHtml",
          "when": "resourceExtname == .md",
          "group": "navigation@1"
        },
        {
          "command": "gammaSlides.convertToPdf",
          "when": "resourceExtname == .md",
          "group": "navigation@2"
        },
        {
          "command": "gammaSlides.preview",
          "when": "resourceExtname == .md",
          "group": "navigation@3"
        },
        {
          "command": "gammaSlides.insertFrontmatter",
          "when": "resourceExtname == .md",
          "group": "navigation@4"
        },
        {
          "command": "gammaSlides.newPresentation",
          "group": "navigation@5"
        }
      ]
    },
    "submenus": [
      {
        "id": "cx.tools",
        "label": "$(tools) CX Tools",
        "icon": "$(tools)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioc-aloha/Extensions"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  }
}
